<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="count"
            type="Integer" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity_home.HomeActivity"
        android:orientation="vertical"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:src="@drawable/logo_icon"
                    />

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_gray_bg"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_nav_notification"
                        app:tint="@color/colorPrimary"
                        />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_gray_bg"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_search"
                        app:tint="@color/colorPrimary"
                        />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flCart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:longClickable="false"
                        android:padding="8dp"
                        android:src="@drawable/ic_cart"
                        app:tint="@color/colorPrimary"
                        android:background="@drawable/circle_gray_bg"
                        />

                    <TextView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/circle_white"
                        android:clickable="false"
                        android:gravity="center"
                        android:longClickable="false"
                        android:singleLine="true"
                        android:text='@{String.valueOf(count),default="0"}'
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                </FrameLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="3dp"
            app:itemBackground="@drawable/item_nav_bg"
            app:itemTextColor="@drawable/item_nav_bg"
            app:menu="@menu/menu"
            app:itemIconTint="@drawable/item_nav_bg"
            app:itemIconSize="20dp"
            app:itemTextAppearance="@style/RobotoTextViewStyle"

            app:labelVisibilityMode="labeled"
            app:itemTextAppearanceActive="@style/active"
            app:itemTextAppearanceInactive="@style/active"
            app:itemHorizontalTranslationEnabled="true"
            app:itemRippleColor="@color/gray9"
            />
    </LinearLayout>
</layout>
